#!/bin/sh

alias conf='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# settings for common commands
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -vI"
alias bc="bc -ql"
alias mkd="mkdir -pv"
# alias ls="exa --icons --group-directories-first"
alias lf="lfcd"
